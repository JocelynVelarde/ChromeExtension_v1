{
  "manifest_version": 3,
  "name": "LinkedIn Extension",
  "version": "1.0",
  "description": "Gather profile information from LinkedIn and save it to a Google Sheet.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action_handlers": {
    "chrome_action": {
      "default_popup": {
        "popup": "popup.html",
        "keep_open": true
      }
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ],
  "oauth2": {
    "client_id": "101446701398647168633",
    "scopes": ["https://www.googleapis.com/auth/spreadsheets"]
  }
}
